            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>guestPass.Source__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Membership</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>guestPass.Location__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>$Record.TREX1__memb_Type__r.TREX1__Location__c</elementReference>
