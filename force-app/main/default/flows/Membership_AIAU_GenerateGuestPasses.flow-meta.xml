    <assignments>
        <name>Increment_Counter</name>
        <label>Increment Counter</label>
        <locationX>50</locationX>
        <locationY>431</locationY>
        <assignmentItems>
            <assignToReference>numGuestPassesCreated</assignToReference>
            <operator>Add</operator>
            <value>
                <numberValue>1.0</numberValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Add_Guest_Pass_to_List</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Check_for_Guest_Passes_to_Create</name>
        <label>Check for Guest Passes to Create</label>
        <locationX>182</locationX>
        <locationY>323</locationY>
        <defaultConnector>
            <targetReference>Insert_Guest_Passes</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Has_Guest_Pass_to_Create</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>numGuestPassesCreated</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <elementReference>$Record.TREX1__memb_Type__r.Guest_Passes_per_Year__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Increment_Counter</targetReference>
            </connector>
            <label>Has Guest Pass to Create</label>
        </rules>
    </decisions>
    <description>Record-triggered, after insert and after update. When a membership is newly activated, generate new guest passes for the member.</description>
    <environments>Default</environments>
    <formulas>
        <name>dateFmlExpirationDate</name>
        <dataType>Date</dataType>
        <expression>{!dateFmlNextRenewalDate} - 1</expression>
    </formulas>
    <formulas>
        <name>dateFmlNextRenewalDate</name>
        <dataType>Date</dataType>
        <expression>DATE( YEAR( {!$Flow.CurrentDate} ) + 1, MONTH( {!$Flow.CurrentDate} ), DAY( {!$Flow.CurrentDate} ) )</expression>
    </formulas>
    <interviewLabel>Membership AIAU HandleGuestPasses {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Membership AIAU GenerateGuestPasses</label>
    <processMetadataValues>
        <name>BuilderType</name>
